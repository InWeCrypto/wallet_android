<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hongbao_title_bg"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/close"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="13dp"
                android:src="@mipmap/wihteback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fahongbao"
                android:textColor="@color/c_ffffff"
                android:textSize="18sp" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#029857" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/disibu_"
        android:textColor="#333333"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="@string/shenchengyangshiyulanfenxiang"
        android:textColor="#333333"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/chunwenzihongbao"
        android:textColor="#ACACAC"
        android:textSize="13dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"/>


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/fasongrenmingcheng"
        android:background="@drawable/feed_back_bg"
        android:cursorVisible="true"
        android:gravity="left"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingBottom="15dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:textColor="@color/c_333333"
        android:textCursorDrawable='@null'
        android:textColorHint="@color/c_cfcfcf"
        android:textSize="13sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>


    <EditText
        android:id="@+id/et_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:minHeight="160dp"
        android:hint="@string/zhufuyu_liuyan"
        android:background="@drawable/feed_back_bg"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:cursorVisible="true"
        android:gravity="top|left"
        android:inputType="textMultiLine"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingLeft="10dp"
        android:textColor="@color/c_333333"
        android:textCursorDrawable='@null'
        android:textColorHint="@color/c_cfcfcf"
        android:textSize="13sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <net.qiujuer.genius.ui.widget.Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:layout_marginRight="34dp"
        android:background="@drawable/hongbao_buttom_bg"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/zhijiefenxiang"
        android:textColor="@color/c_ffffff"
        android:textSize="14sp"
        app:gTouchCornerRadius="12dp"
        app:gTouchDurationRate="0.7"
        app:gTouchEffect="ripple" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

</LinearLayout>