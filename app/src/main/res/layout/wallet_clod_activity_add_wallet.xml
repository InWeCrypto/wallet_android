<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_efefef">

    <include layout="@layout/base_title_bar"/>

    <RelativeLayout
        android:id="@+id/rl_eth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_ffffff">

        <ImageView
            android:id="@+id/img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="32dp"
            android:src="@mipmap/clod_eth"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@id/img"
            android:text="ETH"
            android:textColor="@color/c_333333"
            android:textSize="19sp" />

        <ImageView
            android:id="@+id/eth_select"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="26dp"
            android:src="@mipmap/list_btn_selected"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_below="@+id/img"
            android:layout_marginTop="32dp"
            android:background="@color/c_efefef" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_btc"
        android:background="@color/c_ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32dp"
            android:src="@mipmap/clod_btc"/>

        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c_333333"
            android:textSize="19sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img1"
            android:layout_marginLeft="18dp"
            android:text="BTC"/>

        <ImageView
            android:id="@+id/btc_select"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginRight="26dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/list_btn_default"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="32dp"
            android:layout_below="@+id/img1"
            android:background="@color/c_efefef"/>
    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/queding"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:textColor="@color/c_ffffff"
        android:background="@drawable/round_6dp_bule_bg"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="46dp" />

</LinearLayout>