<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/c_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/hongbao_title_bg"
        android:orientation="vertical">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/status_bar_height" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/close"
                android:layout_width="38dp"
                android:layout_height="44dp"
                android:paddingBottom="13dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="13dp"
                android:src="@mipmap/wihteback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/fahongbao"
                android:textColor="@color/c_ffffff"
                android:textSize="18sp" />
        </FrameLayout>

    </LinearLayout>

    <com.inwecrypto.wallet.common.widget.VerticalSwipeRefreshLayout
        android:id="@+id/swipeRefersh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#029857" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="#F1F1F1" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:text="@string/diyibu_"
                android:textColor="#333333"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/sairulijin"
                android:textColor="#333333"
                android:textSize="18dp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="26"/>

            <FrameLayout
                android:id="@+id/assetfl"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:paddingBottom="16dp"
                android:paddingTop="16dp">

                <TextView
                    android:id="@+id/asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xuanzeethzichan"
                    android:textColor="#ACACAC"
                    android:textSize="13dp" />

                <ImageView
                    android:layout_width="4.5dp"
                    android:layout_height="8.5dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/xiangmuchakan_fanhui"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#EAEAEA"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="63"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/hongbaofafangjine_"
                android:textColor="#ACACAC"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="359dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/c_ffffff"
                    android:cursorVisible="true"
                    android:gravity="center_vertical"
                    android:inputType="numberDecimal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/c_333333"
                    android:textColorHint="@color/c_999999"
                    android:textCursorDrawable='@null'
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="#333333"
                    android:text=""/>
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/c_ececec" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="47"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="@string/hongbaofafanggeshu_"
                android:textColor="#ACACAC"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/et_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/c_ffffff"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:cursorVisible="true"
                android:gravity="center_vertical"
                android:inputType="numberDecimal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/c_999999"
                android:textColor="@color/c_333333"
                android:textCursorDrawable='@null'
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@color/c_ececec" />

            <TextView
                android:id="@+id/max_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#A6A4A4"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="15dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="83"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/kuanggongfeiyong"
                    android:textColor="@color/c_000000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/gas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0.0000000"
                    android:textColor="#FF841C"
                    android:textSize="14dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="46" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="34dp"
                android:paddingRight="34dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/man"
                    android:textColor="#C5C5C5"
                    android:textSize="12dp" />

                <com.xw.repo.BubbleSeekBar
                    android:id="@+id/gasBar"
                    android:layout_width="0dp"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    app:bsb_auto_adjust_section_mark="true"
                    app:bsb_second_track_color="#FF841C"
                    app:bsb_show_progress_in_float="false"
                    app:bsb_thumb_radius="9dp"
                    app:bsb_thumb_radius_on_dragging="12dp"
                    app:bsb_track_color="#0A9234"
                    app:bsb_track_size="2dp"
                    app:bsb_hide_bubble="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="@string/kuai"
                    android:textColor="#C5C5C5"
                    android:textSize="12dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="98"/>

            <net.qiujuer.genius.ui.widget.Button
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34dp"
                android:layout_marginRight="34dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/hongbao_buttom_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/zhifulijin"
                android:textColor="@color/c_ffffff"
                android:textSize="14sp"
                app:gTouchCornerRadius="12dp"
                app:gTouchDurationRate="0.7"
                app:gTouchEffect="ripple" />

            <LinearLayout
                android:id="@+id/wallet_list"
                android:clickable="true"
                android:background="?android:selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:visibility="invisible"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:ellipsize="middle"
                        android:maxWidth="220dp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#B5B4B3"
                        android:textSize="13sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zuidakeyongshuliang_"
                            android:textColor="#B5B4B3"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#F9480E"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="4.5dp"
                    android:layout_height="8.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="right|center_vertical"
                    android:src="@mipmap/xiangmuchakan_fanhui"/>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="52"/>
        </LinearLayout>

    </com.inwecrypto.wallet.common.widget.VerticalSwipeRefreshLayout>

</LinearLayout>