<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:paddingRight="14dp"
    android:background="@android:color/transparent">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="13dp"
            android:layout_height="6dp"
            android:src="@mipmap/icon_sanjiao"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/c_ffffff">
        
        <LinearLayout
            android:id="@+id/zhujicill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:clickable="true"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/zhujici"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:text="@string/beifenzhujici"
                android:textSize="14sp"
                android:textColor="@color/c_000000"/>
        </LinearLayout>

        <View
            android:id="@+id/hit"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/c_DAD7D7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/keystore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/beifenkeystore"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="@color/c_000000"/>
        </LinearLayout>

        <View
            android:id="@+id/hit2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/c_DAD7D7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:text="@string/shanchuqianbao"
                android:textSize="14sp"
                android:textColor="@color/c_000000"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>