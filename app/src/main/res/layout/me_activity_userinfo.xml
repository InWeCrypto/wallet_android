<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF">

    <include layout="@layout/base_title_bar"/>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:clickable="true"
        android:paddingBottom="18dp"
        android:paddingLeft="34dp"
        android:paddingRight="24dp"
        android:paddingTop="18dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/touxiang"
            android:textColor="@color/c_333333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/right_hint1"/>

        <TextView
            android:id="@+id/right_hint1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text=">"
            android:textColor="@color/c_999999"
            android:textSize="12sp" />

    </RelativeLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <RelativeLayout
        android:id="@+id/rl_nicheng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:clickable="true"
        android:paddingLeft="34dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/hit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/nicheng"
            android:textColor="@color/c_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/nicheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_toRightOf="@+id/hit"
            android:layout_centerVertical="true"
            android:textColor="@color/c_333333"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/right_hint2"/>

        <TextView
            android:id="@+id/right_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text=">"
            android:textColor="@color/c_999999"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/nicheng"
            android:layout_marginTop="24dp"
            android:background="@color/c_efefef"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_bg"
        android:clickable="true"
        android:paddingBottom="24dp"
        android:paddingLeft="34dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/sex"
            android:textColor="@color/c_333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/c_333333"
            android:textSize="12sp"
            android:layout_toLeftOf="@+id/right_hint3"/>

        <TextView
            android:id="@+id/right_hint3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:text=">"
            android:textColor="@color/c_999999"
            android:textSize="12sp" />
    </RelativeLayout>
</LinearLayout>